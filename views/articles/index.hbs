<h1>All Products</h1>
{{#each products}} {{!-- iterates over the array of books --}}
  <div class="product">
    <h1>Name: {{name}}</h1>
    <h2>ID: {{id}}</h2>
    <h2>Price: ${{price}}</h2>
    <h2>Inventory: {{inventory}}</h2>
  </div>
<form action="/products/{{id}}?_method=DELETE" method="POST" >
   <input type="submit" value="Remove Product">
</form>
{{/each}}
<form action="/products/new" method="GET" >
   <input type="submit" value="New product">
</form>
{{#if success.delete}}
<p>Item was deleted.</p>
{{/if}}
