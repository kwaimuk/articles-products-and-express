<div><FORM METHOD="GET" ACTION="/products/new">
<INPUT TYPE="submit" VALUE="New Product">
</FORM></div>
{{#if id}}
<div class="product">
  <h1>Name: {{name}}</h1>
  <h2>ID : {{id}}</h2>
  <h2>Price: ${{price}}</h2>
  <h2>Inventory: {{inventory}}</h2>
</div>
<form action="/products/{{id}}/edit" method="GET" >
   <input type="submit" value="Edit Product">
</form>
<form action="/products/{{id}}?_method=DELETE" method="POST" >
   <input type="submit" value="Remove Product">
</form>
{{else}}
  <h1>Product Not Found</h1>
{{/if}}