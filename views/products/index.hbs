<h1>All Products</h1>
<div><a href="../products/new">new</a></div>
{{#if success.delete}}
<p>Item deleted.</p>
{{/if}}

{{#each products}} {{!-- iterates over the array of books --}}
  <div class="product">
    <h1>Name: {{name}}</h1>
    <h2>ID: {{id}}</h2>
    <h2>Price: ${{price}}</h2>
    <h2>Inventory: {{inventory}}</h2>
  </div>
{{/each}}
  <div><a href="../products/new">new</a></div>